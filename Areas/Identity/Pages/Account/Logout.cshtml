@page
@model PortalAcademico.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Haz clic aquí para cerrar sesión</button>
            </form>
        }
        else
        {
            <p>Has cerrado sesión exitosamente.</p>
        }
    }
</header>