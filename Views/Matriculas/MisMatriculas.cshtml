@model IEnumerable<PortalAcademico.Models.Matricula>

@{
    ViewData["Title"] = "Mis Matrículas";
}

<h1>Mis Matrículas</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var matricula in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title">@matricula.Curso.Nombre</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@matricula.Curso.Codigo</h6>
                            </div>
                            <span class="badge bg-@(matricula.Estado switch 
                            {
                                EstadoMatricula.Pendiente => "warning",
                                EstadoMatricula.Confirmada => "success",
                                EstadoMatricula.Cancelada => "secondary",
                                _ => "secondary"
                            })">
                                @matricula.Estado
                            </span>
                        </div>
                        
                        <p class="card-text mt-2">
                            <strong>Créditos:</strong> @matricula.Curso.Creditos<br />
                            <strong>Horario:</strong> @matricula.Curso.HorarioInicio.ToString(@"hh\:mm") - 
                                                      @matricula.Curso.HorarioFin.ToString(@"hh\:mm")<br />
                            <strong>Fecha de registro:</strong> @matricula.FechaRegistro.ToString("dd/MM/yyyy HH:mm")
                        </p>
                        
                        @if (matricula.Estado != EstadoMatricula.Cancelada)
                        {
                            <form asp-action="Cancelar" method="post" class="d-inline"
                                  onsubmit="return confirm('¿Estás seguro de cancelar esta matrícula?');">
                                <input type="hidden" name="id" value="@matricula.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancelar Matrícula</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        No tienes matrículas registradas. 
        <a asp-controller="Cursos" asp-action="Catalogo">Explora el catálogo de cursos</a> 
        para inscribirte.
    </div>
}

<div class="mt-3">
    <a asp-controller="Cursos" asp-action="Catalogo" class="btn btn-primary">Ver Catálogo</a>
</div>