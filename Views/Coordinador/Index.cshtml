@model IEnumerable<PortalAcademico.Models.Curso>

@{
    ViewData["Title"] = "Gestión de Cursos";
}

<h2 class="mb-4">Panel de Coordinador - Cursos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Nuevo Curso</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Duración</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Nombre</td>
                <td>@item.Creditos</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>